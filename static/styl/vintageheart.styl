@import "static/styl/vendor/normalize.css";
@import "static/styl/vars.styl";

html {
  background-color: #494846;
}

#bg {
  position: fixed;
  background: url(/static/img/main_bg_large.jpg) no-repeat center center fixed;
  background-size: cover;
  width: 100%;
  height: 100%;
  top: 0;
  opacity: 0.001;
  z-index: -1;
  transition-delay: 1s;
  transition: opacity 0.6s;
}
#bg.bg-in {
  opacity: 1;
}

body {
  font-family: var(sans);
  font-weight: 400;
  color: var(my-color);
}

header {
  max-width: 600px;
}

svg {
  display: block;
  margin: 20px auto;
  width: 240px;
  height: 240px;
}

.page-container {
  max-width: 580px;
  padding: 0 10px;
}

p {
  padding: 20px;
  background-color: rgba(0,0,0,0.4);
}

#map {
  display: block;
  overflow: hidden;
  width: 580px;
  height: 180px;
  opacity: 0.7;
  transition: opacity 0.5s;
}
#map:hover {
  opacity: 1;
}
#map img {
  z-index: -1;
}

h2 {
  font-size: 30px;
  font-weight: 700;
  margin: 10px;
  text-align: center;
  text-shadow: 1px 1px 0 rgba(0,0,0,0.3);
}

