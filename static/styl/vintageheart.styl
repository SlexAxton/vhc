@import "static/styl/vendor/normalize.css";
@import "static/styl/vars.styl";

html {
  background-color: #494846;
}

#bg {
  position: fixed;
  background: url(/static/img/main_bg_large.jpg) no-repeat center center fixed;
  background-size: cover;
  width: 100%;
  height: 100%;
  top: 0;
  opacity: 0.001;
  z-index: -1;
  transition-delay: 1s;
  transition: opacity 0.6s;
}
#bg.bg-in {
  opacity: 1;
}

body {
  font-family: var(sans);
  font-weight: 400;
  color: var(my-color);
}

header {
  width: 480px;
}

svg {
  width: 200px;
  height: 200px;
}

h1 {
  font-size: 40px;
  font-weight: 700;
  margin-top: 42px;
}

