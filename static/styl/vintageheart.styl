@import "normalize.css";

:root {
  --my-color: #4c555a;
  --sans: 'Whitney A', 'Whitney B', Tahoma, Verdana, sans-serif;
}

html {
  background-color: #494846;
}

#bg {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 540px;
  background-image: url('/static/img/main_bg_large-2.jpg') at-2x;
  background-repeat: no-repeat;
  background-size: cover;
  background-position: bottom right, center;
  opacity: 0.001;
  z-index: -1;
  transition-delay: 0.1s;
  transition: opacity 0.6s;
}
#bg.bg-in {
  opacity: 1;
}

body {
  font-family: var(--sans);
  font-weight: 400;
  color: var(--my-color);
}

#toplogo {
  display: inline-block;
  position: relative;
  vertical-align: middle;
  overflow: hidden;
  width: 100%;
  max-width: 440px;
  height: 440px;
  margin: 50px 0;
}

#toplogo svg {
  display: inline-block;
  position: absolute;
  top: 0;
  left: 0;
}

@media (max-width: 730px) {
  #bg {
    background-image: url('/static/img/main_bg_small-2.jpg') at-2x;
    background-size: cover;
    background-position: bottom, center;
    height: 610px;
  }

  #toplogo {
    display: block;
    margin: 10px auto;
    max-width: 260px;
    height: 540px;
  }

  #toplogo svg {
    display: block;
    position: fixed;
    top: initial;
    left: initial;
    width: 260px;
  }
  #toplogo.below svg {
    position: relative;
    margin-top: 270px;
  }
}
@media (max-width: 620px) {
  #bg {
    height: 560px;
    background-position: center, center;
  }
}

.page-container {
  padding: 0;
  background-color: #f4f5f6;
  box-shadow: 0 0 5px rgba(0,0,0,0.5);
}

h2 {
  font-size: 30px;
  font-weight: 700;
  margin: 10px;
  text-align: center;
  text-shadow: 1px 1px 0 rgba(0,0,0,0.3);
}

h5 {
  font-size: 18px;
  text-align: left;
  margin: 5px 0;
  padding: 0;
}

.open {
  font-size: 22px;
  color: #292e31;
  text-align: center;
  padding: 10px;
  text-shadow: 1px 1px 0 rgba(255,255,255,1);
}

#map {
  position: relative;
  padding-bottom: 30%;
  height: 0;
  overflow: hidden;
}
#map p {
  margin: 2px 0;
}
@media (max-width: 940px) {
  #map {
    padding-bottom: 50%;
  }
}
@media (max-width: 560px) {
  #map {
    padding-bottom: 60%;
  }
}
@media (max-width: 480px) {
  #map {
    padding-bottom: 75%;
  }
}
@media (max-width: 400px) {
  #map {
    padding-bottom: 90%;
  }
}
@media (max-width: 330px) {
  #map {
    padding-bottom: 100%;
  }
}

#map iframe,
#map-box {
  border: none;
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 4;
}

#map-box {
  width: 110%;
  margin-left: -5%;
  box-shadow: 0 0 4px rgba(0,0,0,0.6) inset;
  z-index: 5;
  pointer-events: none;
}

.infowindow {
  width: 190px;
  height: 67px;
}

#instagramphotos-container {
  background-color: #565656;
  padding: 0;
  height: 120px;
  width: 100%;
  opacity: 0.8;
  overflow: hidden;
  transition: opacity 0.3s ease-in-out;
  transition-delay: 0.4s;
}
#instagramphotos-container:hover {
  opacity: 1;
}
#instagramphotos {
  list-style: none;
  padding: 0;
  margin: 0;
  width: 2480px;
  overflow: hidden;
}
#instagramphotos li {
  display: block;
  width: 120px;
  height: 120px;
  margin: 0;
  overflow: hidden;
  float: left;
  border-right: 1px solid #f4f5f6;
}
#instagramphotos li a {
 display: block;
 margin: 0;
 padding: 0;
 height: 120px;
 width: 120px;
}

#instagramphotos li a img {
  border: none;
  margin: 0;
  padding: 0;
}
